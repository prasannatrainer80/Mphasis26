package com.java.spr;

import org.springframework.beans.factory.annotation.Value;

public class SpelEx3 {
	@Value("#{10 + 20}")
	private int result;

	public static void main(String[] args) {
		System.out.println(#{1 + 2});
		          // evaluates to 3
		#{'Hello'.toUpperCase()}  // "HELLO"
		#{true ? 'Yes' : 'No'}    // "Yes"

	}
}
